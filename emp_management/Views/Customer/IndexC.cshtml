@model IEnumerable<Customer>

@{
    ViewBag.Title = "Customer List";
}

<div class="card-deck">
    @foreach (var customer in Model)
    {
        var photoPath = "~/Images/" + (customer.PhotoPath ?? "shock.png");

        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@customer.Name</h3>
            </div>
            <img class="card-img-top imageThumbnai" src=@photoPath asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="customer" asp-action="detailsc" asp-route-id="@customer.Id"
                   class="btn btn-primary m-1">View</a>
                <a asp-controller="customer" asp-action="edit" asp-route-id="@customer.Id"
                   class="btn btn-primary m-1">Edit</a>
                <a asp-controller="customer" asp-action="delete" asp-route-id="@customer.Id"
                   class="btn btn-danger m-1">Delete</a>

                @*@Html.ActionLink("View", "details", "home", new { id = employee.Id})*@
                @*<a href="@Url.Action("details", "home", new { id = employee.Id })"
                    class="btn btn-primary">Show</a>*@
            </div>
        </div>
    }
</div>
